<li>
  <a href="<%= url_for(item) %>">
    <div class="thumb" style="background-image: url('<%= item.fet_image.image.url(:medium) %>')">
    </div>
    <div class="content">
      <h2><%= link_to item.title, item %></h2>

      <small class="text-muted">
        <i class="fa fa-child" aria-hidden="true"></i> <%= item.item_age.title if item.item_age %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <i class="fa fa-folder" aria-hidden="true"></i> <%= item.item_category.title if item.item_category %>
      </small>

    </div>
    <div class="text-center">
      <%= link_to "Comprar", new_order_path(product: item.id), class: "btn btn-primary btn-block" %>
    </div>
  </a>
</li>
