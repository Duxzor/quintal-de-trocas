<h1>Listing Toy Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toy_categories.each do |toy_category| %>
      <tr>
        <td><%= toy_category.title %></td>
        <td><%= link_to 'Show', toy_category %></td>
        <td><%= link_to 'Edit', edit_toy_category_path(toy_category) %></td>
        <td><%= link_to 'Destroy', toy_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Toy category', new_toy_category_path %>
